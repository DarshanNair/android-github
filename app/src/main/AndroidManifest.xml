<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.darshan.androidgithub">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.darshan.github.core.GithubApplication"
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.darshan.github.toptrendinglist.view.TopTrendingListActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.darshan.github.toptrendingdetail.view.TopTrendingDetailActivity"
            android:theme="@style/AppTheme.NoActionBar"/>

    </application>

</manifest>